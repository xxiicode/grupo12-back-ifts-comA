extends layout

block content
  .container.mt-4
    .card.shadow-lg
      .card-body
        h2.text-primary.mb-4 Editar Cliente

        form(action=`/clientes/editar/${cliente.id}` method="post")
          .row.g-3
            .col-md-6
              label.form-label(for="nombre") Nombre
              input.form-control#nombre(type="text" name="nombre" value=cliente.nombre required)
            .col-md-6
              label.form-label(for="email") Email
              input.form-control#email(type="email" name="email" value=cliente.email required)
            .col-md-6
              label.form-label(for="telefono") Tel√©fono
              input.form-control#telefono(type="tel" name="telefono" value=cliente.telefono)
          .mt-4.d-flex.justify-content-end.gap-2
            a.btn.btn-outline-secondary(href="/clientes") Cancelar
            button.btn.btn-success(type="submit") Guardar cambios
