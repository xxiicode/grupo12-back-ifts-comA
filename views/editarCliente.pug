extends layout

block content
  .container.mt-4
    .card.shadow-lg
      .card-body
        h2.text-primary.mb-4 Editar Cliente

        form(action=`/usuarios/editar/${cliente._id}` method="post")
          .row.g-3
            .col-md-6
              label.form-label(for="username") Usuario
              input.form-control#username(type="text" name="username" value=cliente.username required)
            .col-md-6
              label.form-label(for="nombre") Nombre completo
              input.form-control#nombre(type="text" name="nombre" value=cliente.nombre)
            .col-md-4
              label.form-label(for="dni") DNI
              input.form-control#dni(type="text" name="dni" value=cliente.dni)
            .col-md-4
              label.form-label(for="email") Email
              input.form-control#email(type="email" name="email" value=cliente.email)
            .col-md-4
              label.form-label(for="telefono") Teléfono
              input.form-control#telefono(type="text" name="telefono" value=cliente.telefono)
            .col-md-6
              label.form-label(for="password") Nueva contraseña (dejar vacío para mantener la actual)
              input.form-control#password(type="password" name="password")
          .mt-4.d-flex.justify-content-end.gap-2
            a.btn.btn-outline-secondary(href="/usuarios/clientes") Cancelar
            button.btn.btn-success(type="submit") Guardar cambios
